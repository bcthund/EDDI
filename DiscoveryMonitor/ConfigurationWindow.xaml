<UserControl x:Class="EddiDiscoveryMonitor.ConfigurationWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EddiDiscoveryMonitor"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800">

    <DockPanel LastChildFill="True" Background="#FFE5E5E5">
        <TabControl x:Name="tabControl" DockPanel.Dock="Top" TabStripPlacement="Top">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="MinWidth" Value="150" />
                    <Setter Property="Height" Value="Auto" />
                </Style>
            </TabControl.Resources>
            <TabItem Header="General">
                <local:Tab_General/>
            </TabItem>
            <TabItem Header="Exobiology">
                <local:Tab_Exobiology/>
            </TabItem>
            <TabItem Header="Tools">
                <local:Tab_Tools/>
            </TabItem>
        </TabControl>
        
    </DockPanel>
</UserControl>
